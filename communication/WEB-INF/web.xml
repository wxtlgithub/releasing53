	<!-- 彩信网关sevlet -->
	<servlet>
		<description>mm7 mo servlet</description>
		<servlet-name>moRequest</servlet-name>
		<servlet-class>com.lxt2.mmsgateway.mo.MM7MOServlet</servlet-class>
		<init-param>
			<param-name>mmsg_constants_beanname</param-name>
			<param-value>mmsgConstants5305</param-value>
		</init-param>
		<init-param>
			<param-name>sid_beanname</param-name>
			<param-value>ndSid</param-value>
		</init-param>
		<init-param>
			<param-name>hub_beanname</param-name>
			<param-value>hubImpl</param-value>
		</init-param>
		<init-param>
			<param-name>data_gather</param-name>
			<param-value>mtsDataGather5305</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>moRequest</servlet-name>
		<url-pattern>/vas5305</url-pattern>
	</servlet-mapping>
	<!-- 彩信网关sevlet end -->

	<login-config>
		<auth-method>BASIC</auth-method>
	</login-config>
