<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
	<!-- 基于大小分文件的文件最大值 -->
	<property name="SIZEBASE_MAX_SIZE" value="100MB" />
	<!-- 基于大小分文件的最多文件数 -->
	<property name="SIZEBASE_MAX_INDEX" value="5" />

	<!-- 引入文件 -->
	<property name="USER_HOME" value="${WORKDIR}../../../logs/" />
	<include file="${WORKDIR}WEB-INF/classes/53/logback/proxyservice.xml" />
	<include file="${WORKDIR}WEB-INF/classes/53/logback/mtprocess.xml" />
	<include file="${WORKDIR}WEB-INF/classes/53/logback/rptprocess.xml" />
	<include file="${WORKDIR}WEB-INF/classes/53/logback/moprocess.xml" />
	<include file="${WORKDIR}WEB-INF/classes/53/logback/hub.xml" />
	<include file="${WORKDIR}WEB-INF/classes/53/logback/rescenter.xml" />
	<include file="${WORKDIR}WEB-INF/classes/53/logback/datalog.xml" />
	<include file="${WORKDIR}WEB-INF/classes/53/logback/sendrecord_datalog.xml" />

	<!-- 性能日志 -->
	<appender name="performance"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${USER_HOME}performance.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<FileNamePattern>${USER_HOME}performance.%i.log.zip</FileNamePattern>
			<MinIndex>1</MinIndex>
			<MaxIndex>5</MaxIndex>
		</rollingPolicy>
		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>${SIZEBASE_MAX_SIZE}</MaxFileSize>
		</triggeringPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%date{HH:mm:ss.SSS} %-5p[%F:%L][%t] - %msg%n</Pattern>
		</layout>
	</appender>
	<logger name="com.lxt2.clumped.task.PerformanceLoggerTask"
		level="debug" additivity="false">
		<appender-ref ref="performance" />
	</logger>

	<!-- sqllog -->
	<appender name="sqllog"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${USER_HOME}sql.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<FileNamePattern>${USER_HOME}sql.%i.log.zip</FileNamePattern>
			<MinIndex>1</MinIndex>
			<MaxIndex>5</MaxIndex>
		</rollingPolicy>
		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>${SIZEBASE_MAX_SIZE}</MaxFileSize>
		</triggeringPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%date{MM-dd HH:mm:ss.SSS} %-5p[%F:%L][%t] - %msg%n</Pattern>
		</layout>
	</appender>
	<logger name="com.techcenter.dbcore.dbbase.jdbc" additivity="false">
		<appender-ref ref="sqllog" />
	</logger>

	<!-- 系统框架日志 -->
	<appender name="framework"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<File>${USER_HOME}framework.log</File>
		<rollingPolicy class="ch.qos.logback.core.rolling.FixedWindowRollingPolicy">
			<FileNamePattern>${USER_HOME}framework.%i.log.zip</FileNamePattern>
			<MinIndex>1</MinIndex>
			<MaxIndex>5</MaxIndex>
		</rollingPolicy>
		<triggeringPolicy
			class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
			<MaxFileSize>${SIZEBASE_MAX_SIZE}</MaxFileSize>
		</triggeringPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%date{HH:mm:ss.SSS} %-5p[%F:%L][%t] - %msg%n</Pattern>
		</layout>
	</appender>
	<logger name="com.lxt2.framework" level="error">
		<appender-ref ref="framework" />
	</logger>
	<logger name="com.lxt2.common" level="info">
		<appender-ref ref="framework" />
	</logger>
	<!-- 性能日志配置 -->
	<logger name="com.lxt2.clumped.task.PerformanceLoggerTask"
		level="debug" additivity="false">
		<appender-ref ref="performance" />
	</logger>

</configuration>