<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="mtsGatewayModule5315" class="com.lxt2.gateway.sms.module.SmsGatewayModule">
		<property name="id" value="5315"/>
		<property name="name" value="下行发送CMPP30"/>
		<property name="hub" ref="hubImpl"/>
		<property name="submitQueue" ref="mtsSubmitQueue5315"/>
		<property name="adapter" ref="mtsPersistentSubmitQueueAdapter5315"/>
		<property name="gateway" ref="mtsCmpp30Gateway5315"/>
		<property name="status" value="STOP"/>
		<property name="configList">
			<list>
				<ref bean="mtsCmpp30Parameter5315"/>
				<ref bean="mtsCmpp30DeliverAdapter5315"/>
			</list>
		</property>
		<!-- 命令集合 -->
		<property name="controlCmdMap">
			<map>
				<entry key="qePerf" value-ref="mtsQueueCmd5315"/>
                <entry key="view" value-ref="mtsGateWayViewCmd5315"/>
			</map>
		</property>
		<!-- 指标集合 -->
		<property name="kpiList">
			<list>
				<ref bean="mtsQueueKPI5315"/>
				<ref bean="mtsGateWayModuleKPI5315"/>
			</list>
		</property>
	</bean>

	<!-- 模块的指标配置 -->
	<bean id="mtsQueueKPI5315" class="com.lxt2.queuekc.QueueKPI">
		<property name="queue" ref="mtsSubmitQueue5315"/>
	</bean>
	<!-- 模块的命令配置 -->
	<bean id="mtsQueueCmd5315" class="com.lxt2.queuekc.QueuePerfCmd">
		<property name="kpiQueueList">
			<list>
				<ref bean="mtsQueueKPI5315"/>
			</list>
		</property>
	</bean>

	<bean id="mtsSubmitQueue5315" class="com.lxt2.queuekc.CacheQueue" destroy-method="destroy">
		<property name="cache">
			<bean class="ihandy.lxt20.persist.cache.Priority" destroy-method="close"/>
		</property>
		<property name="queueName" value="mtsSubmit5315"/>
	</bean>
	
	<bean id="mtsPersistentSubmitQueueAdapter5315" class="com.lxt2.gateway.sms.queue.PersistentSubmitQueueAdapter">
		<property name="cacheQueue" ref="mtsSubmitQueue5315"/>
		<property name="hub" ref="hubImpl"/>
		<property name="spliterMap" ref="mtsSpliterMap5315"/>
		<property name="config" ref="mtsCmpp30GatewayConfig5315"/>
	</bean>
	<bean id="mtsPersistentRespQueueAdapter5315" class="com.lxt2.gateway.sms.queue.PersistentRespQueueAdapter">
		<property name="hub" ref="hubImpl"/>
		<property name="config" ref="mtsCmpp30GatewayConfig5315"/>
		<property name="saveLogger" ref="saveLogger"/>
		<property name="sid" ref="ndSid"/>
	</bean>
	<bean id="mtsPersistentReportQueueAdapter5315" class="com.lxt2.gateway.sms.queue.PersistentReportQueueAdapter">
		<property name="hub" ref="hubImpl"/>
		<property name="reportAdapter" ref="mtsCmpp30reportAdapter5315"/>
		<property name="sid" ref="ndSid"/>
		<property name="config" ref="mtsCmpp30GatewayConfig5315"/>
	</bean>
	<bean id="mtsPersistentDeliverQueueAdapter5315" class="com.lxt2.gateway.sms.queue.PerisitentDeliverQueueAdapter">
		<property name="hub" ref="hubImpl" />
		<property name="deliverAdapter" ref="mtsCmpp30DeliverAdapter5315"/>
		<property name="sid" ref="ndSid"/>
		<property name="config" ref="mtsCmpp30GatewayConfig5315"/>
	</bean>
    <bean id="mtsGateWayModuleKPI5315" class="com.lxt2.gateway.sms.module.SmsGatewayModuleKPI">
        <property name="cacheQueue" ref="mtsSubmitQueue5315"/>
        <property name="dataGather" ref="mtsDataGather5315"/>
        <property name="module" ref="mtsGatewayModule5315"/>
    </bean>
    <bean id="mtsDataGather5315" class="com.lxt2.gateway.sms.GatewayDataGather" init-method="init" destroy-method="destroy">
    	<property name="path" value="${CLASSPATH}/${nodeID}/persistent/statistics/gateway5315.properties"/>
    </bean>
    <!-- 获取模块的监视信息 -->
	<bean id="mtsGateWayViewCmd5315" class="com.lxt2.base.module.ModuleKPICmd">
		<property name="kpi" ref="mtsGateWayModuleKPI5315"/>
	</bean>
	
	<!-- 拆分抽象bean -->
	<bean id="mtsAbstractSpliter5315" abstract="true" lazy-init="true">
		<property name="gatewayId" ref="gatewayId5315"/>
		<property name="gatewayXmlParser" ref="gatewayXml"/>
	</bean>
	<bean id="mtsSpliterMap5315" class="java.util.HashMap" scope="prototype">
		<constructor-arg index="0">
			<map>
				<entry key="15">
					<!-- 普通短信拆分类 -->
					<bean class="com.techcenter.spliter.CommSmsSpliter"  parent="mtsAbstractSpliter5315" >
						<property name="smSplit">
							<bean class="com.techcenter.spliter.SMSplit" />
						</property>
					</bean>
				</entry>
				<entry key="31">
					<!-- wappush拆分类 -->
					<bean class="com.techcenter.spliter.WapPushSpliter" />
				</entry>
				<entry key="32">
					<!-- 长短信拆分类 -->
					<bean class="com.techcenter.spliter.LongSmsSpliter"  parent="mtsAbstractSpliter5315" />
				</entry>
			</map>
		</constructor-arg>
	</bean>
</beans>
